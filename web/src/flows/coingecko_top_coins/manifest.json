{
    "name": "coingecko_top_coins",
    "type": "flow",
    "description": "Query top N coins ordered by Market Cap. pageNumber starts from 1, default: 1. pageLimit is the number of coins per page, default: 100.",
    "version": "0.1.0",
    "webpage_url": "coingecko.com",
    "nodes": [
        {
            "name": "FlowStart",
            "type": "worklet",
            "version": "0.1.0"
        },
        {
            "name": "Coingecko",
            "type": "worklet",
            "version": "0.1.0",
            "properties": {
                "coingecko_access_key": "$CoingeckoAccessKey"
            }
        },
        {
            "name": "FlowEnd",
            "type": "worklet",
            "version": "0.1.0"
        }
    ],
    "connections": [
        {
            "name": "start the flow, query all categories",
            "src": {
                "worklet": "FlowStart",
                "action": "action_flow_start"
            },
            "dest": [
                {
                    "worklet": "Coingecko",
                    "action": "action_top_coins"
                }
            ]
        },
        {
            "name": "flow ends",
            "src": {
                "worklet": "Coingecko",
                "action": "action_top_coins"
            },
            "dest": [
                {
                    "worklet": "FlowEnd",
                    "action": "action_flow_end"
                }
            ]
        }
    ],
    "properties": {
        "coingecko_access_key": "$CoingeckoAccessKey"
    },
    "parameters": [
        {
            "name": "page_number",
            "value_type": "number"
        },
        {
            "name": "page_limit",
            "value_type": "number"
        }
    ]
}